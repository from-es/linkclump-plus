{
	"manifest_version": 3,
	"name": "Linkclump Plus",
	"description": "Lets you open, copy or bookmark multiple links at the same time.",
	"version": "2.12.4",
	"icons": {
		"16": "img/icon_16.png",
		"32": "img/icon_32.png",
		"48": "img/icon_48.png",
		"128": "img/icon_128.png"
	},
	"action": {},
	"permissions": [
		"tabs",
		"bookmarks",
		"storage",
		"clipboardWrite"
	],
	"host_permissions": [
		"*://*/*"
	],
	"background": {
		"service_worker": "/background.js",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"all_frames": true,
			"run_at": "document_idle",
			"js": [
				"/content-scripts/content.js"
			]
		}
	],
	"options_ui": {
		"open_in_tab": true,
		"page": "/options.html"
	}
}